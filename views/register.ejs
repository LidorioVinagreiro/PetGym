<header>
  <div id="left-side">
    <img id="logo" src="images/logo.png" alt="">
    <h1>PetGym</h1>
  </div>
  <div id="right-side">
    <nav class="mainMenu">
      <ul class="mainMenuList">
        <li><a style="text-decoration:none" href="/">Home</a></li>
        <li><a style="text-decoration:none" href="/users/dashboard">Animais</a></li>
        <li><a style="text-decoration:none" href="home.html">Quem somos</a></li>
        <li><a style="text-decoration:none" href="#footer-bottom">Contactos</a></li>
        <li><a id="login" style="text-decoration:none" href="/users/login">Login</a></li>
        <li><a id="registar" style="text-decoration:none" href="/users/register">Registar</a></li>

      </ul>
    </nav>
  </div>
</header>
<main>
<div class="login">
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <% include ./partials/messages %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Nome</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirmar Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Registar
        </button>
      </form>
      <p class="lead mt-4">JÃ¡ tem conta? <a href="/users/login">Login</a></p>
    </div>
  </div>
</div>
</div>
</main>