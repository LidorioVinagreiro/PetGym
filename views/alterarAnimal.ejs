<header>
  <div id="left-side">
    <img id="logo" src="images/logo.png" alt="">
    <h1>PetGym</h1>
  </div>
  <div id="right-side">
    <nav class="mainMenu">
      <ul class="mainMenuList">
        <li><a style="text-decoration:none" href="/">Home</a></li>
        <li><a style="text-decoration:none" href="/users/dashboard">Animais</a></li>
        <li><a style="text-decoration:none" href="home.html">Quem somos</a></li>
        <li><a style="text-decoration:none" href="#footer-bottom">Contactos</a></li>
        <li><a id="login" style="text-decoration:none" href="/users/login">Login</a></li>
        <li><a id="registar" style="text-decoration:none" href="/users/register">Registar</a></li>

      </ul>
    </nav>
  </div>
</header>
<main>
  <div class="login">
    <h1 class="text-center mb-3">
      <i class="fas fa-user-plus"></i> Alterar registo animal
    </h1>
    <form action="/Alterar" method="POST">

      <div class="form-group">
        <label for="animal_id">Nome animal</label>
        <input type="hidden" id="animal_id" name="animal_id" class="form-control" placeholder="id do animal"
          value="<%- typeof animal.animal_id != 'undefined' ? animal.animal_id : '-1' %>" />
      </div>

      <div class="form-group">
        <label for="animal_nome">Nome animal</label>
        <input type="animal_nome" id="animal_nome" name="animal_nome" class="form-control"
          placeholder="Insira nome do animal"
          value="<%- typeof animal.animal_nome != 'undefined' ? animal.animal_nome : '' %>" />
      </div>

      <div class="form-group">
        <label for="animal_raca">Raça animal</label>
        <input type="animal_raca" id="animal_raca" name="animal_raca" class="form-control"
          placeholder="Insira raça do animal"
          value="<%- typeof animal.animal_raca != 'undefined' ? animal.animal_raca : '' %>" />
      </div>

      <div class="form-group">
        <label for="animal_data_nasc">Data nasc animal</label>
        <input type="date" id="animal_data_nasc" name="animal_data_nasc" class="form-control"
          placeholder="Insira data nasc do animal"
          value="<%- typeof animal.animal_data_nasc != 'undefined' ? animal.animal_data_nasc : '' %>" />
      </div>

      <div class="form-group">
        <label for="animal_adoptado">Adoptado</label>
        <input type="checkbox" id="animal_adoptado" name="animal_adoptado" class="form-control"
          placeholder="Animal adoptado"
          value="<%- typeof animal.animal_adoptado == 'undefined' ? animal.animal_adoptado : '0' %>"
          <% if(animal.animal_adoptado!='undefined' && animal.animal_adoptado ==1 )  { %> checked <% } else {%>
          <%} %> />
      </div>




      <button type="submit" class="btn btn-primary btn-block">
        Alterar animal
      </button>

    </form>
  </div>
</main>

<script>

  var checkbox = document.getElementById('animal_adoptado');
  checkbox.onclick = function () {
    if (checkbox.checked) {
      checkbox.value = 1;
    } else {
      checkbox.value = 0;
    }
  }

</script>