    }
    
    .modal__inner button{
      font-family: 'Raleway', Arial, sans-serif;
      text-transform: uppercase;
      border:2px solid #00b0b3;
      background: #00b0b3;;
      width: 100%;
      padding: 15px;
      color: #FFFFFF;
      font-size: 14px;
      margin-bottom: 20px;
    
    }
    
    .modal__inner button:hover:focus {
      background: white;
      color:#00b0b3;
      font-weight: lighter;
      outline:0;
    }
    
    
    .modal__inner p{
      font-family: 'Raleway', Arial, sans-serif;
      margin: 15px 0 0;
      color: #b3b3b3;
      font-size: 13.5px;
    }
    
    .modal__close {
      position: absolute;
      right: 1em;
      top: 1em;
      width: 1.1em;
      height: 1.1em;
      cursor: pointer;
    }
    
    .modal__close:after,
    .modal__close:before {
      content: '';
      position: absolute;
      width: 2px;
      height: 1.5em;
      background: #ccc;
      display: block;
      transform: rotate(45deg);
      left: 50%;
      margin: -3px 0 0 -1px;
      top: 0;
    }
    
    .modal__close:hover:after,
    .modal__close:hover:before {
      background: #aaa;
    }
    
    .modal__close:before {
      transform: rotate(-45deg);
    }
    
    
    
    
