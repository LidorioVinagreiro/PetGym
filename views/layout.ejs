     .modal {
      opacity: 0;
      visibility: hidden;
      position: fixed;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      text-align: left;
      background: rgba(0, 0, 0, 0.5);
      transition: opacity 0.5;
    }
    
    
    .modal-state {
      display: none;
    }
    
    .modal-state:checked + .modal {
      opacity: 1;
      visibility: visible;
    }
    
    .modal-state:checked + .modal .modal__inner {
      top: 0;
    }
    
    /*Modal mesmo*/
    .modal__inner {
      transition: top .2s ease;
      position: absolute;
      top: -20%;
      right: 0;
      bottom: 0;
      left: 0;
      margin: auto;
      overflow: auto;
      padding: 1em 2em;
    
      background: #fff;
      width: 30%;
      height: 40%;
